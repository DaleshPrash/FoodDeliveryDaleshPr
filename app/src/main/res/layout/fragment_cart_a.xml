<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_yellow"

    android:padding="16dp">

    <!-- Items Count on the Left -->
    <TextView
        android:id="@+id/textViewCartItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Items: 0"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonCheckout"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Total Price on the Right -->
    <TextView
        android:id="@+id/textViewCartTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: â‚¹0.00"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonCheckout"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Checkout Button Centered at the Bottom -->
    <Button
        android:id="@+id/buttonCheckout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checkout"
        android:textStyle="bold"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewCartItems"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>